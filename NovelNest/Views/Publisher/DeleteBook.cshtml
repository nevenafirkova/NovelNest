@model BookDeleteViewModel

@{
    ViewBag.Title = "Изтрий Книга";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <img class="card-img-top" src="@Model.ImageUrl" alt="Book Image" style="max-width: 200px; height: auto;">
                    <h2 class="card-title" style="margin-top: 15px;">@Model.Title - @Model.Author</h2>
                    <p class="text-danger mt-3">Сигурен ли си, че искаш да изтриеш тази книга?</p>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <form asp-action="DeleteBookConfirmed" method="post" class="col-12">
                        <input type="hidden" asp-for="Id" />
                        <a asp-controller="Book" asp-action="All" class="btn btn-warning mb-1 w-100 p-3 fw-bold">Обратно към всички</a>
                        <button type="submit" class="btn btn-danger mb-1 w-100 p-3 fw-bold">Изтрий</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>