@model BookStoreAddViewModel

@{
    ViewBag.Title = "Добави Книжарница";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddBookStore" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit"><bold>Име</bold></label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Location" class="form-label-add-edit"><bold>Локация</bold></label>
                <input asp-for="@Model.Location" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Location" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.OpeningTime" class="form-label-add-edit"><bold>Час на Отваряне</bold></label>
                <input asp-for="@Model.OpeningTime" class="form-control" aria-required="true" type="time" />
                <span asp-validation-for="@Model.OpeningTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ClosingTime" class="form-label-add-edit"><bold>Час на Затваряне</bold></label>
                <input asp-for="@Model.ClosingTime" class="form-control" aria-required="true" type="time" />
                <span asp-validation-for="@Model.ClosingTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Contact" class="form-label-add-edit"><bold>Контакт</bold></label>
                <input asp-for="@Model.Contact" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Contact" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit"><bold>Снимка (Линк)</bold></label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-success mb-2 w-100 p-3 fw-bold" type="submit" value="Добави" />
                <a asp-controller="BookStore" asp-action="All" class="btn btn-secondary mb-1 w-100 p-3 fw-bold">Обратно към Всички</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}