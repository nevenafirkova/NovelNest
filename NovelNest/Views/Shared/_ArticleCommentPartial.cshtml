@inject UserManager<IdentityUser> UserManager
@model ArticleCommentServiceModel

@{
    var user = await UserManager.FindByIdAsync(Model.UserId);
    var currentUserName = user?.UserName;
}

<div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
    <div><strong>@currentUserName</strong></div>
    <div><strong>Заглавие:</strong> @Model.Title</div>
    <div><strong>Описание:</strong> @(Model.Description?.Length <= 300 ? Model.Description : Model.Description.Substring(0, 300) + (Model.Description.Length > 300 ? "..." : ""))</div>

    <div class="d-flex justify-content-center mt-3">
        @if (Model.Description.Length > 300)
        {
            <a asp-controller="Article" asp-action="ArticleCommentDetails" asp-route-id="@Model.Id" class="btn btn-warning px-2 fw-bold me-2">Виж Целия Коментар</a>
        }
        @if (Model.UserId == UserManager.GetUserId(User))
        {
            <a asp-controller="Article" asp-action="EditArticleComment" asp-route-id="@Model.Id" class="btn btn-secondary px-2 fw-bold me-2">Редактирай</a>
            <a asp-controller="Article" asp-action="DeleteArticleComment" asp-route-id="@Model.Id" class="btn btn-danger px-2 fw-bold">Изтрий</a>
        }
    </div>
</div>
