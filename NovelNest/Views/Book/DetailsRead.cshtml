@inject UserManager<IdentityUser> UserManager
@model BookViewModel

@{
    ViewBag.Title = "Детайли";
}
<h2 class="text-center mt-4 mb-3">@ViewBag.Title</h2>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl" class="img-fluid" alt="Book Image" style="max-width: 100%;" />
        </div>
        <div class="col-md-8">
            <h4>@Model.Title</h4>
            <p><strong>Автор:</strong> @Model.Author</p>
            <p><strong>Жанр:</strong> @Model.Genre</p>
            <p><strong>Резюме:</strong> @Model.Description</p>
            <p><strong>Брой Страници:</strong> @Model.Pages</p>
            <p><strong>Издател:</strong> @Model.PublishingHouse</p>
            <p><strong>Година на Публикуване:</strong> @Model.YearPublished</p>
            <p><strong>Вид Корица:</strong> @Model.CoverType</p>
            <p><strong>Цена:</strong> @Model.Price лв.</p>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-1">
        <a asp-controller="Book" asp-action="Mine" asp-route-id="@UserManager.GetUserId(User)" class="btn btn-warning mb-1 me-1 me-md-2 w-100 p-3 fw-bold">Обратно към Моите Книги</a>
        <a asp-controller="Book" asp-action="CurrentlyReading" asp-route-id="@Model.Id" class="btn btn-warning mb-1 w-100 p-3 fw-bold">Обратно към "В Момента Чета"</a>
    </div>

    <div class="d-flex justify-content-center mt-1">
        <a asp-controller="Book" asp-action="AddCurrentlyReading" asp-route-id="@Model.Id" class="btn btn-success mb-1 me-1 me-md-2 w-100 p-3 fw-bold">Премести във "В Момента Чета"</a>
        <a asp-controller="Book" asp-action="AddWantToRead" asp-route-id="@Model.Id" class="btn btn-success mb-1 w-100 p-3 fw-bold">Премести в "Искам да Прочета"</a>
    </div>

    <div class="d-flex justify-content-center mt-1">
        <a asp-controller="Book" asp-action="AddReview" asp-route-id="@Model.Id" class="btn btn-secondary mb-1 me-1 me-md-2 w-100 p-3 fw-bold">Добави Ревю</a>
        <a asp-controller="Book" asp-action="AllReviews" asp-route-id="@Model.Id" class="btn btn-secondary mb-1 w-100 p-3 fw-bold">Виж Всички Ревюта</a>
    </div>

    <div class="text-center mt-1">
        <a asp-controller="Book" asp-action="AddToCart" class="btn btn-primary mb-2 w-100 p-3 fw-bold">Добави в Количката</a>
        <a asp-controller="Book" asp-action="RemoveRead" asp-route-id="@Model.Id" class="btn btn-danger mb-2 w-100 p-3 fw-bold">Премахни</a>
    </div>
</div>