    <hr class="my-4"> 
    <a asp-area="Admin" asp-controller="Admin" asp-action="AddPublisher" class="btn btn-secondary btn-lg">Добави Publisher</a>
    <a asp-area="Admin" asp-controller="Admin" asp-action="RemovePublisher" class="btn btn-danger btn-lg">Премахни Publisher</a>
    <span> | </span> 
    <a asp-area="Admin" asp-controller="Admin" asp-action="AddAdmin" class="btn btn-secondary btn-lg">Добави Admin</a>
    <a asp-area="Admin" asp-controller="Admin" asp-action="RemoveAdmin" class="btn btn-danger btn-lg">Премахни Admin</a>
</div>